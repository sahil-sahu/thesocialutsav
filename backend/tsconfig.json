{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src", // Base URL for the alias
    "paths": {
      "@/*": ["*"] // This maps '@' to the entire 'src' folder
    }
  },
  "exclude": ["node_modules"]
}
